<style-scheme id="iplastic" _name="iPlastic" version="1.0">
  <author>tm2gtksw2(Alexandre da Silva)</author>
  <_description>GMate Theme - Generated from textmate theme with tm2gtksw2</_description>

  <!-- Global Settings -->
  <style name="selection"         background="#bad6fd"/>
  <style name="text"              foreground="#000000" background="#eeeeee"/>
  <style name="cursor"            foreground="#000000"/>
  <style name="current-line"      background="#d5d5d5"/>
  <style name="line-numbers"      foreground="#000000" background="#eeeeee"/>

  <!-- Bracket Matching -->
  <style name="bracket-match" background="#4C4C4C"/>
  <style name="bracket-mismatch" background="#4C4C4C" bold="true"/>
  <style name="search-match" background="#404040"/>

  <!-- Comments -->
  <style name="def:comment" foreground="#0066ff" italic="true"/>
  <style name="def:shebang" foreground="#0066ff" italic="true"/>
  <style name="def:doc-comment-element" foreground="#0066ff" italic="true"/>

  <!-- Constants and Variables-->
  <style name="def:constant" foreground="#6782d3"/>
  <style name="def:string" foreground="#009933"/>
  <style name="def:character" foreground="#009933"/>
  <style name="def:special-char" foreground="#000000"/>
  <style name="def:special-constant" foreground="#9700cc"/>
  <style name="def:instance-variable" />
  <style name="def:boolean" foreground="#9700cc"/>
  <style name="def:number" foreground="#0066ff"/>
  <style name="def:base-n-integer" foreground="#0066ff"/>
  <style name="def:decimal" foreground="#0066ff"/>
  <style name="def:complex" foreground="#0066ff"/>
  <style name="def:floating-point" foreground="#0066ff"/>
  <style name="def:keyword" foreground="#0000ff"/>
  <style name="def:builtin" foreground="#ff8000"/>
  <style name="def:variable" />
  <style name="def:class-variable" />
  <style name="def:identifier" />
  <style name="def:statement" foreground="#6782d3"/>
  <style name="def:type" foreground="#6782d3"/>
  <style name="def:error" background="#C80000" foreground="#F0EA20"/>
  <style name="def:note" background="#F0EA20" foreground="#C80000"/>
  <style name="def:net-address-in-comment" />
  <style name="def:preprocessor" foreground="#0000ff"/>
  <style name="def:specials" foreground="#6782d3"/>
  <!--style name="def:reserved"  background="#C80000" foreground="#F0EA20"/>
  <style name="def:operator"/-->
  <style name="def:underlined" underline="true"/>
  <style name="def:function" foreground="#6782d3"/>

  <!-- Ruby Styles -->
  <style name="ruby:module-handler" foreground="#6782d3"/>
  <style name="ruby:regex" foreground="#ff0080"/>
  <style name="ruby:class-definition" foreground="#6782d3"/>
  <style name="ruby:simple-interpolation" foreground="#6782d3"/>
  <style name="ruby:complex-interpolation" foreground="#6782d3"/>
  <style name="ruby:function-definition" foreground="#ff8000"/>
  <style name="ruby:special-variable" />
  <style name="ruby:predefined-variable" foreground="#0033cc"/>
  <style name="ruby:global-variable" />
  <style name="ruby:instance-variable" />
  <style name="ruby:class-variable" />
  <style name="ruby:operators" foreground="#0000ff"/>
  <style name="ruby:symbol" foreground="#6782d3"/>

  <!-- YAML Styles -->
  <style name="yaml:inner-key" foreground="#6782d3"/>
  <style name="yaml:scalar-value" foreground="#009933"/>

  <!-- Rails Styles -->
  <style name="rubyonrails:module-handler" foreground="#6782d3"/>
  <style name="rubyonrails:regex" foreground="#ff0080"/>
  <style name="rubyonrails:class-definition" foreground="#6782d3"/>
  <style name="rubyonrails:simple-interpolation" foreground="#6782d3"/>
  <style name="rubyonrails:complex-interpolation" foreground="#6782d3"/>
  <style name="rubyonrails:function-definition" foreground="#ff8000"/>
  <style name="rubyonrails:special-variable" />
  <style name="rubyonrails:predefined-variable" foreground="#0033cc"/>
  <style name="rubyonrails:global-variable" />
  <style name="rubyonrails:instance-variable" />
  <style name="rubyonrails:class-variable" />
  <style name="rubyonrails:operators" foreground="#0000ff"/>
  <style name="rubyonrails:symbol" foreground="#6782d3"/>
  <style name="rubyonrails:rails" foreground="#6782d3"/>

  <!-- Diff Settings -->
  <style name="diff:added-line" />
  <style name="diff:removed-line" />
  <style name="diff:location" />
  <style name="diff:ignore" />
  <style name="diff:changed-line" foreground="#6782d3"/>
  <style name="diff:diff-file" foreground="#0000ff"/>
  <style name="diff:special-case" map-to="diff:location"/>

  <!-- SH Styles -->
  <style name="sh:others" map-to="text"/>

  <!-- C Styles -->
  <style name="c:preprocessor" map-to="def:special-char"/>

  <!-- CSS Styles -->
  <style name="css:function" />
  <style name="css:known-property-values" foreground="#6782d3"/>
  <style name="css:others-2" foreground="#6782d3"/>
  <style name="css:others-3"  foreground="#6782d3"/>

  <!-- XML Styles -->
  <style name="xml:attribute-name" foreground="#ff8000"/>
  <style name="xml:element-name" foreground="#0033cc"/>
  <style name="xml:attribute-value" foreground="#009933"/>
  <style name="xml:namespace" foreground="#6782d3"/>
  <style name="xml:entity" foreground="#6782d3"/>
  <style name="html:script" foreground="#6782d3"/>

</style-scheme>

