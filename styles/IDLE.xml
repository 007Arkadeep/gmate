<style-scheme id="idle" _name="IDLE" version="1.0">
  <author>tm2gtksw2(Alexandre da Silva)</author>
  <_description>GMate Theme - Generated from textmate theme with tm2gtksw2</_description>

  <!-- Global Settings -->
  <style name="selection"         background="#bad6fd"/>
  <style name="text"              foreground="#000000" background="#ffffff"/>
  <style name="cursor"            foreground="#000000"/>
  <style name="current-line"      background="#ededed"/>
  <style name="line-numbers"      foreground="#000000" background="#ffffff"/>

  <!-- Bracket Matching -->
  <style name="bracket-match" background="#4C4C4C"/>
  <style name="bracket-mismatch" background="#4C4C4C" bold="true"/>
  <style name="search-match" background="#404040"/>

  <!-- Comments -->
  <style name="def:comment" foreground="#919191"/>
  <style name="def:shebang" foreground="#919191"/>
  <style name="def:doc-comment-element" foreground="#919191"/>

  <!-- Constants and Variables-->
  <style name="def:constant" />
  <style name="def:string" foreground="#00a33f"/>
  <style name="def:character" foreground="#00a33f"/>
  <style name="def:special-char" foreground="#000000"/>
  <style name="def:special-constant" foreground="#a535ae"/>
  <style name="def:instance-variable" />
  <style name="def:boolean" foreground="#a535ae"/>
  <style name="def:number" />
  <style name="def:base-n-integer" />
  <style name="def:decimal" />
  <style name="def:complex" />
  <style name="def:floating-point" />
  <style name="def:keyword" foreground="#ff5600"/>
  <style name="def:builtin" foreground="#21439c"/>
  <style name="def:variable" />
  <style name="def:class-variable" />
  <style name="def:identifier" />
  <style name="def:statement" />
  <style name="def:type" />
  <style name="def:error" background="#C80000" foreground="#F0EA20"/>
  <style name="def:note" background="#F0EA20" foreground="#C80000"/>
  <style name="def:net-address-in-comment" />
  <style name="def:preprocessor" foreground="#ff5600"/>
  <style name="def:specials" />
  <!--style name="def:reserved"  background="#C80000" foreground="#F0EA20"/>
  <style name="def:operator"/-->
  <style name="def:underlined" underline="true"/>
  <style name="def:function" />

  <!-- Ruby Styles -->
  <style name="ruby:module-handler" />
  <style name="ruby:regex" foreground="#00a33f"/>
  <style name="ruby:class-definition" />
  <style name="ruby:simple-interpolation" />
  <style name="ruby:complex-interpolation" />
  <style name="ruby:function-definition" foreground="#21439c"/>
  <style name="ruby:special-variable" />
  <style name="ruby:predefined-variable" />
  <style name="ruby:global-variable" />
  <style name="ruby:instance-variable" />
  <style name="ruby:class-variable" />
  <style name="ruby:operators" foreground="#ff5600"/>
  <style name="ruby:symbol" />

  <!-- YAML Styles -->
  <style name="yaml:inner-key" />
  <style name="yaml:scalar-value" foreground="#00a33f"/>

  <!-- Rails Styles -->
  <style name="rubyonrails:module-handler" />
  <style name="rubyonrails:regex" foreground="#00a33f"/>
  <style name="rubyonrails:class-definition" />
  <style name="rubyonrails:simple-interpolation" />
  <style name="rubyonrails:complex-interpolation" />
  <style name="rubyonrails:function-definition" foreground="#21439c"/>
  <style name="rubyonrails:special-variable" />
  <style name="rubyonrails:predefined-variable" />
  <style name="rubyonrails:global-variable" />
  <style name="rubyonrails:instance-variable" />
  <style name="rubyonrails:class-variable" />
  <style name="rubyonrails:operators" foreground="#ff5600"/>
  <style name="rubyonrails:symbol" />
  <style name="rubyonrails:rails" />

  <!-- Diff Settings -->
  <style name="diff:added-line" />
  <style name="diff:removed-line" />
  <style name="diff:location" />
  <style name="diff:ignore" />
  <style name="diff:changed-line" />
  <style name="diff:diff-file" foreground="#ff5600"/>
  <style name="diff:special-case" map-to="diff:location"/>

  <!-- SH Styles -->
  <style name="sh:others" map-to="text"/>

  <!-- C Styles -->
  <style name="c:preprocessor" map-to="def:special-char"/>

  <!-- CSS Styles -->
  <style name="css:function" />
  <style name="css:known-property-values" />
  <style name="css:others-2" />
  <style name="css:others-3"  />

  <!-- XML Styles -->
  <style name="xml:attribute-name" foreground="#21439c"/>
  <style name="xml:element-name" />
  <style name="xml:attribute-value" foreground="#00a33f"/>
  <style name="xml:namespace" />
  <style name="xml:entity" />
  <style name="html:script" />

</style-scheme>

